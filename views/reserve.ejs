<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reserve a Slot</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        /* Reset and basic styling */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            padding: 20px;
        }

        header {
            text-align: center;
            margin-bottom: 20px;
        }

        .container {
            max-width: 800px;
            margin: auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .reservation-form {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-bottom: 8px;
        }

        input[type="text"],
        input[type="email"],
        input[type="date"],
        button {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button {
            background-color: #6d93ec;
            color: white;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #4a77d4;
        }

        h2 {
            margin-top: 20px;
        }

        .slot-group {
            margin-bottom: 20px;
        }

        .slot-group h3 {
            margin-bottom: 10px;
        }

        .slots {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
            gap: 10px;
        }

        .slot {
            display: flex;
            align-items: center;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .slot:hover {
            background-color: #f2f2f2;
        }

        .slot.booked {
            background-color: #f8d7da;
            cursor: not-allowed;
        }

        .slot.booked input[type="radio"] {
            cursor: not-allowed;
        }

        /* Responsive adjustments */
        @media (max-width: 600px) {
            .container {
                padding: 10px;
            }

            .slots {
                grid-template-columns: 1fr;
            }
        }

        .notification {
            display: none;
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #4caf50;
            color: white;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            z-index: 1;
        }

        .notification button {
            float: right;
            background: none;
            border: none;
            color: inherit;
            cursor: pointer;
        }

        .notification button:hover {
            text-decoration: underline;
        }

        .popup-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: none;
            justify-content: center;
            align-items: center;
        }

        .popup-content {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            text-align: center;
        }
        .home-link {
            position: absolute;
            top: 20px; /* Adjust top position as needed */
            left: 20px; /* Adjust left position as needed */
            background-color: #6d93ec;
            color: white;
            padding: 10px 15px;
            border-radius: 4px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .home-link:hover {
            background-color: #4a77d4;
        }
    </style>
</head>
<body>
    <header>
        <h1>Reserve a Futsal Slot</h1>
        <a href="/" class="home-link">Go back to Home</a>
    </header>

    <main>
        <section class="container">
            <% if (typeof message !== 'defined') { %>
                <div id="messagePopup" class="popup-overlay">
                    <div class="popup-content">
                        <span id="messageText"></span>
                        <br>
                        <button onclick="closePopup()">Close</button>
                    </div>
                </div>

                <script>
                    document.addEventListener('DOMContentLoaded', function() {
                        document.getElementById('messageText').innerText = '<%= message %>';
                        document.getElementById('messagePopup').style.display = 'flex';
                    });

                    function closePopup() {
                        document.getElementById('messagePopup').style.display = 'none';
                    }
                </script>
            <% } %>

            <form action="/reserve" method="POST" class="reservation-form">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>

                <label for="phone">Phone:</label>
                <input type="text" id="phone" name="phone" required>

                <label for="date">Date:</label>
                <input type="date" id="date" name="date" required value="<%= date %>">
                
                <h2>Select a Time Slot:</h2>
                <div class="time-slots">
                    <div class="slot-group">
                        <h3>Morning (6 AM - 11 AM)</h3>
                        <div class="slots">
                            <% for (let i = 6; i < 12; i++) { %>
                                <% const slotTime = new Date(date + 'T' + (i < 10 ? '0' : '') + i + ':00:00'); %>
                                <% const isBooked = bookings.some(booking => new Date(booking.startTime).getHours() === i); %>
                                <label class="slot <%= isBooked ? 'booked' : '' %>">
                                    <input type="radio" name="startTime" value="<%= (i < 10 ? '0' : '') + i %>:00" <%= isBooked ? 'disabled' : '' %> required>
                                    <%= i %>:00 - <%= i + 1 %>:00
                                </label>
                            <% } %>
                        </div>
                    </div>

                    <div class="slot-group">
                        <h3>Afternoon (12 PM - 4 PM)</h3>
                        <div class="slots">
                            <% for (let i = 12; i < 17; i++) { %>
                                <% const slotTime = new Date(date + 'T' + i + ':00:00'); %>
                                <% const isBooked = bookings.some(booking => new Date(booking.startTime).getHours() === i); %>
                                <label class="slot <%= isBooked ? 'booked' : '' %>">
                                    <input type="radio" name="startTime" value="<%= i %>:00" <%= isBooked ? 'disabled' : '' %> required>
                                    <%= i %>:00 - <%= i + 1 %>:00
                                </label>
                            <% } %>
                        </div>
                    </div>

                    <div class="slot-group">
                        <h3>Evening (5 PM - 6 PM)</h3>
                        <div class="slots">
                            <% for (let i = 17; i < 18; i++) { %>
                                <% const slotTime = new Date(date + 'T' + i + ':00:00'); %>
                                <% const isBooked = bookings.some(booking => new Date(booking.startTime).getHours() === i); %>
                                <label class="slot <%= isBooked ? 'booked' : '' %>">
                                    <input type="radio" name="startTime" value="<%= i %>:00" <%= isBooked ? 'disabled' : '' %> required>
                                    <%= i %>:00 - <%= i + 1 %>:00
                                </label>
                            <% } %>
                        </div>
                    </div>
                </div>

                <button type="submit">Reserve</button>
            </form>
        </section>
    </main>

    <div class="notification" id="bookingNotification">
        <span id="notificationText"></span>
        <button onclick="closeNotification()">Close</button>
    </div>

<script>
    // Function to close the notification
    function closeNotification() {
        document.getElementById('bookingNotification').style.display = 'none';
    }

    // Logic to show the notification on successful booking
    const urlParams = new URLSearchParams(window.location.search);
    const success = urlParams.get('success');

    if (success === 'true') {
        document.getElementById('notificationText').innerText = 'Booking successful!';
        document.getElementById('bookingNotification').style.display = 'block';
    }


</script>
</body>
</html>